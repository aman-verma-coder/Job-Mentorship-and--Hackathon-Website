<% layout("/layout/boilerplate") -%>

    <body>
        <div class="home-animation-n-image">
            <div class="animate-box-inner" id="left-box">
                <span class="black">Here you can</span>
                <!-- Element to contain animated typing -->
                <span id="element"></span>
            </div>
            <div class="home-image">
                <img src="https://i.postimg.cc/pLzYcr4q/534b3662-6b98-4d4a-8a69-0d68865d29c8.jpg" alt="">
            </div>
        </div>
        <div class="home-data">
            <div class="home-data-card">
                <div class="home-data-card-info">
                    <h5>Find your mentor</h5>
                    <p>Here you can find mentor according to your profession and your need</p>
                </div>
                <div class="home-data-card-image">
                    <img src="https://i.postimg.cc/QtR0sSHZ/154c23e6-979e-412a-9433-b899232eb214.jpg" alt="">
                </div>
            </div>
            <div class="home-data-card2">
                <div class="home-data-card-info2">
                    <h5>Generate Course</h5>
                    <p>Here you can generate a course using Artificial Intelligence</p>
                </div>
                <div class="home-data-card-image2">
                    <img src="https://i.postimg.cc/GpgXgbR2/483a1c6d-daee-4c7e-aa45-a503a59a7750.jpg alt="">
            </div>
        </div>
        <div class=" home-data-card">
                    <div class="home-data-card-info">
                        <h5>Ask Genius</h5>
                        <p>Here you can ask your questions and AI will answer it</p>
                    </div>
                    <div class="home-data-card-image">
                        <img src="https://i.postimg.cc/ryrfg6PV/522a4726-447b-4d32-a82f-2eb6efda0c7e.jpg" alt="">
                    </div>
                </div>
                <div class="home-data-card2">
                    <div class="home-data-card-info2">
                        <h5>Search Jobs</h5>
                        <p>Here you can serach and apply for Jobs</p>
                    </div>
                    <div class="home-data-card-image2">
                        <img src="https://i.postimg.cc/xTVt4swK/57023a11-d2fb-4d9d-aca3-7c355f403748.jpg" alt="">
                    </div>
                </div>
                <div class="home-data-card">
                    <div class="home-data-card-info">
                        <h5>Find Hackathons</h5>
                        <p>Here you can search and apply for Hackathons</p>
                    </div>
                    <div class="home-data-card-image">
                        <img src="https://i.postimg.cc/2yhT5vZb/639c819b-a623-437a-bde1-913217ea945d.jpg" alt="">
                    </div>
                </div>
            </div>
            <script src="https://unpkg.com/typed.js@2.0.16/dist/typed.umd.js"></script>
            <script>
                var typed = new Typed('#element', {
                    strings: ['<span class="green">Ask Genius for your queries</span>', '<span class="green">Generate a course using AI</span>', '<span class="green">Find a Job</span>', '<span class="green">Find a mentor</span>', '<span class="green">Search for a Hackathon</span>'],
                    typeSpeed: 50,
                });
            </script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
                integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
                crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
                integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
                crossorigin="anonymous"></script>
    </body>